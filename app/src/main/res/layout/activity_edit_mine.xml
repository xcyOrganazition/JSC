<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.mine.EditMineActivity">

    <cn.com.jinshangcheng.widget.TittleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="修改个人信息" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding">

        <TextView
            style="@style/textMoreSmall"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_weight="1"
            android:text="头像" />


        <ImageView
            android:id="@+id/iv_headImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

    <View
        style="@style/divider"
        android:layout_marginEnd="@dimen/common_padding"
        android:layout_marginStart="@dimen/common_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding">

        <TextView
            style="@style/textMoreSmall"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:text="姓名" />


        <EditText
            android:id="@+id/et_name"
            style="@style/textMoreSmall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请填写姓名"
            android:inputType="text" />

    </LinearLayout>


    <View
        style="@style/divider"
        android:layout_marginEnd="@dimen/common_padding"
        android:layout_marginStart="@dimen/common_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding">

        <TextView
            style="@style/textMoreSmall"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:text="昵称" />


        <EditText
            android:id="@+id/et_nickName"
            style="@style/textMoreSmall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请填写昵称"
            android:inputType="text" />

    </LinearLayout>

    <View
        style="@style/divider"
        android:layout_marginEnd="@dimen/common_padding"
        android:layout_marginStart="@dimen/common_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding">

        <TextView
            style="@style/textMoreSmall"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:text="性别" />

        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_male"
                style="@style/CommonRadioButton"
                android:checked="true"
                android:text="男" />

            <RadioButton
                android:id="@+id/rb_female"
                style="@style/CommonRadioButton"
                android:layout_marginLeft="@dimen/common_padding"
                android:text="女" />
        </RadioGroup>


    </LinearLayout>

    <View
        style="@style/divider"
        android:layout_marginEnd="@dimen/common_padding"
        android:layout_marginStart="@dimen/common_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding">

        <TextView
            style="@style/textMoreSmall"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:text="城市" />


        <TextView
            android:id="@+id/tv_city"
            style="@style/textMoreSmall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请选择城市" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_arrow" />

    </LinearLayout>

    <View
        style="@style/divider"
        android:layout_marginEnd="@dimen/common_padding"
        android:layout_marginStart="@dimen/common_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding">

        <TextView
            style="@style/textMoreSmall"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:text="手机" />


        <TextView
            android:id="@+id/et_phone"
            style="@style/textMoreSmall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_changePhone"
            style="@style/textMoreSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/common_padding"
            android:text="更换手机号"
            android:textColor="@color/textBlue" />

    </LinearLayout>

    <View
        style="@style/divider"
        android:layout_marginEnd="@dimen/common_padding"
        android:layout_marginStart="@dimen/common_padding" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/bt_confirm"
        style="@style/commonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_padding"
        android:text="保存" />
</LinearLayout>