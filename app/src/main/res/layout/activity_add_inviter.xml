<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.AddInviterActivity">

    <com.jinshangcheng.widget.TittleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backVisible="false"
        app:centerText="推荐人" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_padding"
        android:text="添加推荐人"
        android:textColor="@color/textGary"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/et_inviterPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_padding"
        android:hint="请输入推荐人手机号"
        android:inputType="phone"
        android:textSize="@dimen/text_middle" />

    <Button
        android:id="@+id/bt_comfirm"
        style="@style/commonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_padding"
        android:text="完成" />

    <TextView
        android:id="@+id/tv_jumpOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/common_padding"
        android:text="跳过"
        android:textColor="@color/textGary"
        android:textSize="@dimen/text_big" />

</LinearLayout>