<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundLightGary"
    android:orientation="vertical"
    tools:context=".ui.mine.AboutUsActivity">

    <cn.com.jinshangcheng.widget.TittleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="关于我们" />

    <ImageView
        android:id="@+id/ic_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/common_padding"
        android:src="@mipmap/ic_launcher" />

    <TextView
        style="@style/textMoreSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="锦尚程车辆盒子APP"
        android:textColor="#ff666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_version"
        style="@style/textMoreSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_padding"
        android:text="当前版本：V1.0.0"
        android:textColor="#ff666666"
        android:textSize="14sp" />

    <View
        style="@style/divider"
        android:layout_marginTop="@dimen/common_padding" />

    <LinearLayout
        android:id="@+id/ll_checkNewVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding">

        <TextView
            style="@style/textMoreSmall"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_weight="1"
            android:text="检查新版本" />
        <ImageView
            android:id="@+id/iv_redPoint"
            android:src="@mipmap/ic_red_point"
            android:layout_width="5dp"
            android:layout_height="5dp" />

    </LinearLayout>

    <View style="@style/divider" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/common_padding"
        android:text="广西锦尚程科技有限公司"
        android:textColor="#ff666666"
        android:textSize="12sp" />
</LinearLayout>