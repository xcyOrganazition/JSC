<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--***************启动页Theme***************-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--**************ToolBar样式*********************-->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <!--新增一个item，用于控制menu-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>
    <!--修改toolbar弹出菜单的位置-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--把该属性改为false即可使menu位置位于toolbar之下-->
        <item name="overlapAnchor">false</item>
    </style>


    <!--标题栏文字-->
    <style name="tittleBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--通用文字颜色文字-->
    <style name="textCommon">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textBig">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="textMiddle">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textSmall">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textMoreSmall">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textSmallest">
        <item name="android:textColor">@color/textGary</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--通用Button样式-->
    <style name="commonButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/btnDarkBg</item>
        <item name="colorButtonNormal">@color/btnBg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--LoadingDialog样式-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <!--背景透明-->
        <item name="android:windowBackground">@color/darkBg</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--悬浮在Activity上-->
        <item name="android:windowIsFloating">true</item>
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--dialog以外的模糊效果-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--没有标题栏-->
        <item name="android:windowNoTitle">true</item>
        <!--半透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--我的模块 列表条目-->

    <style name="mine_item" parent="textCommon">

        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_tv_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <!--分割线-->
    <style name="divider">
        <item name="android:background">@color/dividerColor</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--右侧画出的PopWindow-->
    <style name="AnimationRightFade">
        <item name="android:windowEnterAnimation">@anim/in_righttoleft</item>
        <item name="android:windowExitAnimation">@anim/out_lefttoright</item>
    </style>
    <!--右侧画出的PopWindow-->
    <style name="CommonRadioButton">
        <item name="android:background">@drawable/selector_radio_bg</item>
        <item name="android:textColor">@color/selector_radio_text</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>


    </style>

</resources>
