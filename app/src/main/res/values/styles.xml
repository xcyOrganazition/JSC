<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/backGroundLightGary</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--***************启动页Theme***************-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@mipmap/ic_login_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--从下到上弹出的dialog-->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--**************ToolBar样式*********************-->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <!--新增一个item，用于控制menu-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>
    <!--修改toolbar弹出菜单的位置-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--把该属性改为false即可使menu位置位于toolbar之下-->
        <item name="overlapAnchor">false</item>
    </style>


    <!--标题栏文字-->
    <style name="tittleBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--通用文字颜色文字-->
    <style name="textCommon">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textBig">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="textMiddle">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textSmall">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textMoreSmall">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textSmallest">
        <item name="android:textColor">@color/textGary</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--通用Button样式-->
    <style name="commonButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/btnDarkBg</item>
        <item name="colorButtonNormal">@color/btnBg</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--LoadingDialog样式-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <!--背景透明-->
        <item name="android:windowBackground">@color/darkBg</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--悬浮在Activity上-->
        <item name="android:windowIsFloating">true</item>
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--dialog以外的模糊效果-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--没有标题栏-->
        <item name="android:windowNoTitle">true</item>
        <!--半透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--我的模块 列表条目-->

    <style name="mine_item" parent="textCommon">

        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_tv_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <!--分割线-->
    <style name="divider">
        <item name="android:background">@color/dividerColor</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--右侧画出的PopWindow-->
    <style name="AnimationRightFade">
        <item name="android:windowEnterAnimation">@anim/in_righttoleft</item>
        <item name="android:windowExitAnimation">@anim/out_lefttoright</item>
    </style>
    <!--底部弹出的PopWindow-->
    <style name="AnimationBottom">
        <item name="android:windowEnterAnimation">@anim/in_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/out_top_to_bottom</item>
    </style>
    <!--通用RadioButton-->
    <style name="CommonRadioButton">
        <item name="android:background">@drawable/selector_radio_bg</item>
        <item name="android:textColor">@color/selector_radio_text</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>


    <style name="cst_platform_Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 底部弹出框样式 -->
    <style name="cst_platform_ActionSheetDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/cst_platform_ActionSheetDialogAnimation
        </item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="cst_platform_ActionSheetDialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/cst_platform_action_sheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/cst_platform_action_sheet_dialog_out</item>
    </style>


    <style name="Cst_Platform_Style_Load_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CstPlatformActivityTopBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@color/cst_platform_top_title_bg</item>
    </style>

    <style name="CstPlatformActivityTopBackBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableLeft">@drawable/cst_platform_head_back_btn_white_normal</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/cst_platform_select_color_header_text</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="CstPlatformActivityTopTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/cst_platform_white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CstPlatformActivityTopRightImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">center</item>
        <item name="android:contentDescription">@string/cst_platform_content_desc_default</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CstPlatformActivityTopLeftRightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/cst_platform_select_color_header_text</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- 横线 -->
    <style name="CstPlatformBaseHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/cst_platform_dividing_line_2</item>
    </style>


    <!-- 通用选项卡左边 button布局样式 -->
    <style name="CstPlatformCommonTabButtonLeft">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/cst_platform_switch_left_selector</item>
    </style>

    <style name="CstPlatformCommonTabText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tabswitch_text_selector</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- 通用选项卡右边 button布局样式 -->
    <style name="CstPlatformCommonTabButtonRight">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/cst_platform_switch_right_selector</item>
    </style>


    <style name="CstPlatformCommonTabButtonMid">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/cst_platform_switch_mid_selector</item>
    </style>


    <style name="CstPlatformCommonTabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">#333333</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>


</resources>
